{
  "name": "fuelgo-nigeria",
  "version": "1.0.0",
  "description": "FuelGo Nigeria - Full Stack Fuel Delivery Platform",
  "main": "src/index.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "node dev-server.js",
    "dev:frontend": "cd frontend && npm start",
    "build": "node scripts/vercel-build.js",
    "build:frontend": "cd frontend && set \"CI=false\" && set \"GENERATE_SOURCEMAP=false\" && npm install && npm run build",
    "build:api": "npm run db:generate",
    "build:backend": "tsc -p backend/tsconfig.json",
    "start": "node dev-server.js",
    "deploy": "vercel --prod",
    "deploy:setup": "bash scripts/deploy.sh",
    "deploy:windows": "scripts/deploy.bat",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "test": "jest",
    "seed": "node scripts/seed.js",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.2",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.10.1",
    "@types/axios": "^0.9.36",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.13",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "framer-motion": "^12.19.1",
    "jsonwebtoken": "^9.0.0",
    "multer": "^2.0.1",
    "prisma": "^6.10.1",
    "react-router-dom": "^7.5.3",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/postcss7-compat": "^2.2.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.19.96",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "autoprefixer": "^9.8.8",
    "concurrently": "^8.2.2",
    "jest": "^29.5.0",
    "postcss": "^7.0.39",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "vercel": "^33.5.1"
  }
}
